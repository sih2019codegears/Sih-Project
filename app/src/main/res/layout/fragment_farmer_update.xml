<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".farmers.FarmerUpdateFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/qtyUpdateEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Update quantity in kgs"
            android:maxLength="12"
            android:inputType="number"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="95dp"
            android:textColorHint="@android:color/white"
            android:background="@drawable/border_fields"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>
        <ProgressBar
            android:id="@+id/qtyProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />




        <Button
            android:id="@+id/qtyUpdateButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:text="Get password Reset Link"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>



        <EditText
            android:id="@+id/updatePriceEditText"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:hint="Update Price in Rupees"
            android:maxLength="12"
            android:inputType="number"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginTop="95dp"
            android:textColorHint="@android:color/white"
            android:background="@drawable/border_fields"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"/>

        <ProgressBar
            android:id="@+id/priceProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="90dp"
            android:layout_height="78dp"
            android:layout_gravity="center_horizontal"
            android:visibility="invisible" />




        <Button
            android:id="@+id/updatePriceButton"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/button_background"
            android:text="Update Price"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"/>



    </LinearLayout>






</FrameLayout>